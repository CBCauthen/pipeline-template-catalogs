running sample
pipeline {
  agent {
    kubernetes {
      yaml '''
        apiVersion: v1
        kind: Pod
        spec:
          containers:
          - name: gradle
            image: gradle:jdk11-alpine
            command:
            - cat
            tty: true
        '''
    }
  }
  stages {
    stage("Checkout and Build") {
      steps {
        container('default') {
          checkout([$class: "GitSCM", 
            branches: [[name: "${branchName}"]], 
            doGenerateSubmoduleConfigurations: false, 
            extensions: [], 
            submoduleCfg: [], 
            userRemoteConfigs: [[credentialsId: "${gitCredentials}", url: "${repoUrl}"]]]
          )
        }
        container('gradel') {
         sh "gradlew clean build"
        }
      }
    }    
  }
}
